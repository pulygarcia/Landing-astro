---
interface Props {
	heading: string;
}

const { heading } = Astro.props;
---

<section id="inside" class="section h-screen w-full text-center relative overflow-hidden" data-header-color="white">
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class="text-4xl font-bold pt-40 text-white">{heading}</h2>
            <a href="#" class="underline text-white">Coordinar prueba</a>
        </header>
        
        <footer class="flex flex-col flex-grow justify-end pb-32">
            <div class="flex flex-col items-center text-white">
                <p class="font-bold text-3xl">Confort total</p>
                  
                <p>¿Alguna vez viste una película al volante?</p>
            </div>
        </footer>
    </div>

    <div class="absolute top-0 bottom-0">
        <img class="object-center object-cover h-full w-screen" src="/tesla-interior.avif" alt="Tesla inside">
    </div>
</section>