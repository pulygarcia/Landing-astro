---
interface Props {
	heading: string;
}

const { heading } = Astro.props;
---

<section class="bg-gray-200 text-gray-800 h-screen w-full text-center relative overflow-hidden">
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class="text-4xl font-bold pt-40">{heading}</h2>
            <p class="text-sm mt-2">Charge your car in 5 minutes ...</p>
        </header>
        
        <footer class="flex flex-col flex-grow justify-end pb-32">
            <div class="flex justify-center gap-10 text-white items-center">
                <div class="flex flex-col items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-9 h-9 ">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                    </svg>
                      
                    <p>Carga en casa</p>
                </div>

                <div class="flex flex-col items-center">
                    <p class="font-bold text-3xl">45,000 +</p>
                      
                    <p>Supercargas globales</p>
                </div>

                <div class="flex flex-col items-center">
                    <p class="font-bold text-3xl">45,000 +</p>
                      
                    <p>Supercargas globales</p>
                </div>
            </div>
        </footer>
    </div>

    <div class="absolute top-0 bottom-0">
        <img class="object-center object-cover h-full w-screen" src="/Tesla-charge.avif" alt="Tesla charge">
    </div>
</section>